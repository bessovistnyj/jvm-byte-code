<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.napadovskiu.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>ru.napadovskiu.servlets.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>ru.napadovskiu.servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemsJson</servlet-name>
        <servlet-class>ru.napadovskiu.servlets.ItemsJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemsJson</servlet-name>
        <url-pattern>/ItemsJson</url-pattern>
    </servlet-mapping>


</web-app>